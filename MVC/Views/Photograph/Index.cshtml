@model DAL.Models.Photos
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    body {
        background-color: none;
    }

    #card {
        padding: 30px;
        background-color: #fff;
        box-shadow: rgba(9, 30, 66, 0.25) 0px 4px 8px -2px, rgba(9, 30, 66, 0.08) 0px 0px 0px 1px;
    }
</style>

<h3 class="mb-2">@ViewBag.Category</h3>
<div class="row">
    <div class="col-md-12">
        <div id="card" class="card border-0">
            <img class="card-img" style="max-height:600px;object-fit:scale-down" src="@Model.Name" />
            <div class="card-body d-flex flex-column align-items-center px-0">
                <div class="mb-3 d-inline-flex">
                    @if (Model.Description != null)
                    {
                        <p class="mr-3"><i class="fa-solid fa-circle-info"></i>  @Model.Description</p>
                    }
                    else
                    {
                        <p class="mr-3"><i class="fa-solid fa-circle-info"></i>  Description</p>
                    }
                    <p class="card-text"><i class="fa-solid fa-eye"></i>  @Model.ViewNumber views</p>
                </div>
                <a style="width:200px; background-color: #9772FB; color:white" href="@Model.Name" class="btn" download><i style="color:white;" class="fa-solid fa-download"></i>  Free Download</a>
            </div>
        </div>
    </div>
</div>
