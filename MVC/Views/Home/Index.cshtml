                        </a>
                    </div>
                }
            }
        </div>
        <div class="col-sm-3 p-0">
            @foreach (var item in Model)
            {
                if ((Model.IndexOf(item) + 1) % 4 == 0)
                {
                    <div id="card" class="card p-2 pr-0 border-0">
